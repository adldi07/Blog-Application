<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head")  %>
    <title>Blog</title>
</head>
<body>
    <%- include("./partials/nav") %> 

    <div class="container mt-4">
        <h1> <%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" alt="cover Image not found " width="700px" >
        <pre class="mt-3"><%= blog.body %></pre>
    </div>

    <div class="container mt-3">
        <img src="<%= blog.createdBy.profileImageURL%>" width="50px" alt="user not found">  
        <%= blog.createdBy.fullName %>  
    </div>

    <div class="container mt-3">
        <h1>Comment(<%= comments.length %>) </h1>
        <% if (locals.user) { %>
            <form method="post" action="/blog/comment/<%= blog._id %>">
                <div class="mb-3">
                  <input type="text" name="content" class="form-control" placeholder="Enter your Comment..." >
                    <button class="btn btn-sm btn-primary mt-1" type="submit"> Add Comment </button>
                </div>
            </form> 
        <% } %>

        <div class="mt-3">
            <% comments.forEach((comment,index) => { %>
                <div>
                    <!-- <img src="comment.createdBy.profileImageURL" width="30px" alt="comment owner not found"> and we also can show name of comment owner -->
                    <pre><%= index %>th user created a comment that is ... <%= comment.content %>.</pre>
                </div>
            <% }) %>
        </div>
        
    </div>

    <%- include("./partials/scripts") %>
</body>
</html>